STRING-COUNT THE VOWELS:HACKERRANK (STRINGS)

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    char str1[50];
    scanf("%[^\n]s",str1);
    int i,vow=0;
     for(i=0;str1[i]!='\0';i++){
         if(str1[i]=='a'||str1[i]=='e'||str1[i]=='i'||str1[i]=='o'||str1[i]=='u'||str1[i]=='A'||str1[i]=='E'||str1[i]=='I'||str1[i]=='O'||str1[i]=='U'){
          vow++;   
         }
     }
         printf("%d",vow);
        
    return 0;
}
